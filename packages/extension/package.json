    "@webcomponents/webcomponentsjs": "^2.4.3",
    "autosize": "^4.0.2",
    "debounce": "^1.2.0",
    "husky": "^4.3.0",
    "nanoid": "^3.1.7",
    "qs": "^6.9.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
