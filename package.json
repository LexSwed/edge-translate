{
  "name": "edge-translate",
  "version": "1.2.2",
  "private": true,
  "description": "Translator browser extension",
  "scripts": {
    "start": "now dev",
    "dev": "yarn dev:extension",
    "dev:extension": "yarn workspace extension dev",
    "dev:www": "yarn workspace www dev",
    "build": "yarn build:extension && yarn build:www",
    "build:extension": "yarn workspace extension build",
    "build:www": "yarn workspace www build",
    "lint": "eslint packages/**/*",
    "typecheck": "npx npm-run-all -p tsc:extension tsc:www",
    "tsc:extension": "tsc --noEmit -p packages/extension/tsconfig.json",
    "tsc:www": "tsc --noEmit -p packages/www/tsconfig.json"
  },
  "dependencies": {
    "@fxtrot/edge": "^1.0.29",
    "@now/node": "^1.5.1",
    "@sentry/node": "^5.15.5",
    "node-fetch": "^2.6.0",
    "qs": "^6.9.3"
  },
  "devDependencies": {
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/classnames": "^2.2.10",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node-fetch": "^2.5.7",
    "@types/qs": "^6.9.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "now": "^18.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "semantic-release": "^17.0.7",
    "typescript": "^3.8.3",
    "uuidv4": "^6.0.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LexSwed/edge-translate.git"
  },
  "keywords": [
    "edge",
    "extension",
    "chromium"
  ],
  "author": "lexswed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LexSwed/edge-translate/issues"
  },
  "homepage": "https://github.com/LexSwed/edge-translate#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./.github/workflows/prepare.sh ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "packages/extension/EdgeTranslate.zip"
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "packages/extension/manifest.json",
            "packages/extension/package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
