{
  "name": "extension",
  "description": "Edge Translate browser extension",
  "version": "1.6.1",
  "author": "lexswed",
  "scripts": {
    "dev": "parcel watch src/background/background.ts src/popup/popup.html src/content/content.tsx --no-hmr --public-url /dist",
    "build": "parcel build src/background/background.ts src/popup/popup.html src/content/content.tsx --public-url /dist --no-source-maps"
  },
  "browserslist": [
    "last 2 Chrome version"
  ],
  "bugs": {
    "url": "https://github.com/LexSwed/edge-translate/issues"
  },
  "homepage": "https://github.com/LexSwed/edge-translate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LexSwed/edge-translate.git"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@fxtrot/edge": "1.0.30",
    "@sentry/browser": "^5.22.3",
    "@webcomponents/webcomponentsjs": "^2.4.4",
    "autosize": "^4.0.2",
    "classnames": "^2.2.6",
    "debounce": "^1.2.0",
    "nanoid": "^3.1.12",
    "qs": "^6.9.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-shadow": "^18.3.0",
    "swr": "^0.3.1",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/autosize": "^3.0.7",
    "@types/chrome": "^0.0.122",
    "@types/classnames": "^2.2.10",
    "@types/debounce": "^1.2.0",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "cssnano": "^4.1.10",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^3.2.2",
    "postcss-preset-env": "^6.7.0"
  },
  "targets": {
    "main": {
      "engines": {
        "browsers": [
          "> 3%",
          "not ie 11",
          "not op_mini all"
        ]
      }
    }
  }
}
