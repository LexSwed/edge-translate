    "autosize": "^4.0.2",
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-shadow": "^18.1.0",
    "src": "^1.1.2"
  },
  "devDependencies": {
    "@types/autosize": "^3.0.7",
    "@types/chrome": "^0.0.106",
    "cssnano": "^4.1.10",
