{
  "name": "Edge Translate",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Extension for Microsoft Translator",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_popup": "build/popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["build/background/script.js"]
  },
  "permissions": ["contextMenus", "storage", "http://localhost:3000/", "https://*.lexswed.now.sh/"]
}
