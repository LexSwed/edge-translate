{
  "name": "extension",
  "description": "Edge Translate browser extension",
  "version": "1.7.11",
  "author": "lexswed",
  "scripts": {
    "dev": "parcel watch src/background/background.ts src/popup/popup.html src/content/content.tsx --no-hmr --public-url /dist",
    "build": "parcel build src/background/background.ts src/popup/popup.html src/content/content.tsx --public-url /dist --no-source-maps"
  },
  "browserslist": [
    "last 2 Chrome version"
  ],
  "bugs": {
    "url": "https://github.com/LexSwed/edge-translate/issues"
  },
  "homepage": "https://github.com/LexSwed/edge-translate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LexSwed/edge-translate.git"
  },
  "license": "MIT",
  "dependencies": {
    "@fxtrot/ui": "^1.0.173",
    "@heroicons/react": "^1.0.1",
    "@sentry/browser": "^6.5.1",
    "@stitches/react": "^0.1.9",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "autosize": "^5.0.0",
    "debounce": "^1.2.1",
    "framer-motion": "^4.1.17",
    "nanoid": "^3.1.23",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@types/autosize": "^4.0.0",
    "@types/chrome": "^0.0.144",
    "@types/debounce": "^1.2.0",
    "@types/qs": "^6.9.6",
    "@types/uuid": "^8.3.0",
    "parcel-bundler": "^1.12.5",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^17.4.3",
    "typescript": "^4.3.2"
  },
  "targets": {
    "main": {
      "engines": {
        "browsers": [
          "last 2 Chrome version"
        ]
      }
    }
  }
}
