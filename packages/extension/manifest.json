{
  "name": "Edge Translate",
  "version": "1.2.2",
  "manifest_version": 2,
  "description": "Extension for Microsoft Translator",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "browser_action": {
    "default_popup": "dist/popup/popup.html"
  },
  "web_accessible_resources": ["dist/**/*.css"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["dist/content/content.css"],
      "js": ["dist/content/content.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["dist/background/background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "http://localhost/*",
    "https://edge-translate.lexswed.now.sh/*"
  ]
}
